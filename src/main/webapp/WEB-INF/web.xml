  <display-name>WebStudy01</display-name>
  <welcome-file-list>
    <welcome-file>index.do</welcome-file>
  </welcome-file-list>
  <context-param>
  	<param-name>mediaFolder</param-name>
	<param-value>D:/medias/images</param-value>
